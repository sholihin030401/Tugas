<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2"
        >

    <TextView
        android:id="@+id/gambar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1"
        android:textSize="100sp"
        android:textAlignment="center"
        android:background="#008783"
        />

    <TextView
        android:id="@+id/gambar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="2"
        android:textSize="100sp"
        android:textAlignment="center"
        android:background="#fff555"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/gambar3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="100sp"
            android:textAlignment="center"
            android:background="#f67888"
            />

        <TextView
            android:id="@+id/gambar4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="100sp"
            android:textAlignment="center"
            android:background="#FACBAE"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/gambar5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="100sp"
            android:textAlignment="center"
            android:background="#00f234"
            />

        <TextView
            android:id="@+id/gambar6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="100sp"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_light"
            />

    </LinearLayout>



</LinearLayout>